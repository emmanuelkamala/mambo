<%= simple_form_for(@post) do |f| %>
    <%= f.error_notification %>
      <div class="field">
        <div class="control">
     
          <%= f.input :content, label: "Create a post", input_html: {class: "textarea"},
          wrapper: false, label_html: {class: "label"}, placeholder: "What's on your mind #{current_user.first_name}?", autofocus: true %>
        </div>
      </div>
    <%= f.button :submit, class: "button is-info" %>
  <% end %>